# Arquivo de exemplo para produção
# Copie este arquivo e ajuste para suas configurações de produção

# Configurações do Banco de Dados (Railway fornecerá automaticamente)
DATABASE_URL=mysql://usuario:senha@host:port/database
DB_HOST=containers-us-west-xxx.railway.app
DB_PORT=3306
DB_USER=root
DB_PASSWORD=senha_gerada_railway
DB_NAME=railway

# Configurações do Servidor
PORT=3000
NODE_ENV=production

# Configurações de Segurança (GERE NOVAS CHAVES!)
JWT_SECRET=sua_super_chave_jwt_para_producao_muito_segura_aqui
SESSION_SECRET=sua_super_session_secret_para_producao_muito_segura_aqui

# CORS - Frontend URL (Vercel)
FRONTEND_URL=https://seu-projeto.vercel.app

# URLs permitidas para CORS (separadas por vírgula)
ALLOWED_ORIGINS=https://seu-projeto.vercel.app,https://www.seudominio.com
