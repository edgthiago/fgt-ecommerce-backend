# Configurações de Produção - FGT E-commerce Backend
# Este arquivo será usado como template para as variáveis de ambiente no Render

NODE_ENV=production
PORT=10000

# Database Configuration (será configurado automaticamente pelo Render)
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=${DB_NAME}

# Security Keys (serão gerados automaticamente pelo Render)
JWT_SECRET=${JWT_SECRET}
SESSION_SECRET=${SESSION_SECRET}

# CORS Configuration
FRONTEND_URL=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/production.log

# Cache Configuration
CACHE_TTL=3600

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security Headers
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
CORS_CREDENTIALS=true
